<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">

    <var name="out"
         class="ru.mmtr.flow.Out"/>

    <view-state id="main" view="main">
        <transition on="nextRus" to="temp">
            <set  name = "out.voc"  value = "1"/>
        </transition>
        <transition on="nextBin" to="temp">
        <set  name = "out.voc"  value = "2"/>
        </transition>
    </view-state>


    <view-state id="temp" view="temp" model="ChangeOps">
        <transition on="nextBin" to="temp">
            <set  name = "out.voc"  value = "2"/>
        </transition>
        <transition on="nextRus" to="temp">
            <set  name = "out.voc"  value = "1"/>
        </transition>
        <transition on="next" to="main"/>
        <transition on="nextAdd">
            <evaluate result="out" expression=
                    "ChangeOps.add(requestParameters.inputNameRus,requestParameters.inputNameRus,requestParameters.inputNameRusc,out.voc)"/>
            <render fragments="requestFromServer,messageFromServer"/>
        </transition>
        <transition on="nextDel" >
            <evaluate result="out" expression=
                    "ChangeOps.Del(requestParameters.inputNameRus,out.voc)"/>
            <render fragments="requestFromServer,messageFromServer"/>
        </transition>
        <transition on="nextSearch">
            <evaluate result="out" expression=
                    "ChangeOps.search(requestParameters.inputNameRus,out.voc)" />
            <render fragments="requestFromServer,messageFromServer"/>
        </transition>
        <transition on="nextPrint">
            <evaluate result="out" expression=
                    "ChangeOps.print(out.voc)" />
            <render fragments="requestFromServer,messageFromServer"/>
        </transition>
    </view-state>
</flow>