<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">

    <var name="out"
         class="ru.mmtr.flow.Out"/>
    <var name="type"
         class="ru.mmtr.flow.Type"/>

    <view-state id="main" view="main">
        <transition on="nextRus" to="temp">
            <set  name = "out.voc"  value = "1"/>
            <set  name = "type.type"  value = "1"/>
        </transition>
        <transition on="nextBin" to="temp">
        <set  name = "out.voc"  value = "2"/>
            <set  name = "type.type"  value = "2"/>
        </transition>
    </view-state>


    <view-state id="view" view="view">
        <transition on="editWord" >
            <evaluate result="out" expression=
                    "ChangeOps.updateByWordFromWeb(requestParameters.ids,requestParameters.editWord,type.type)"/>
            <render fragments="list,search"/>
        </transition>
        <transition on="editKey" >
            <evaluate result="out" expression=
                    "ChangeOps.updateByKeyFromWeb(requestParameters.ids,requestParameters.editWord,type.type)"/>
            <render fragments="list"/>
        </transition>
        <transition on="deletedWord" >
            <evaluate result="out" expression=
                    "ChangeOps.delFromWebByKey(requestParameters.delWord,type.type)"/>
            <render fragments="list"/>
        </transition>
        <transition on="deletedKey" >
            <evaluate result="out" expression=
                    "ChangeOps.delFromWebByKey(requestParameters.delKey,type.type)"/>
            <render fragments="list"/>
        </transition>
    </view-state>

    <view-state id="addMany" view="addMany">
        <transition on="addWords" >
            <evaluate result="out" expression=
                    "ChangeOps.addFromWeb(requestParameters.inputNameKey,requestParameters.inputNameWord,type.type)"/>
            <render fragments="editVocAddManyWordsFragment"/>
        </transition>

    </view-state>


    <view-state id="search" view="search">
        <transition on="SearchKey" to="search">
            <evaluate result="out" expression=
                    "ChangeOps.searchFromWebByKey(requestParameters.Key,type.type)"/>
        </transition>
        <transition on="SearchWord" to="search" >
            <evaluate result="out" expression=
                    "ChangeOps.searchFromWebByWords(requestParameters.Word,type.type)"/>
        </transition>
    </view-state>


    <view-state id="temp" view="temp" model="ChangeOps">
        <transition on="nextBin" to="temp">
            <set  name = "out.voc"  value = "2"/>
        </transition>
        <transition on="nextRus" to="temp">
            <set  name = "out.voc"  value = "1"/>
        </transition>
        <transition on="next" to="main"/>
        <transition on="view" to="view">
            <evaluate result="out" expression=
                    "ChangeOps.printKeys(type.type)" />
        </transition>
        <transition on="addMany" to="addMany">
            <evaluate result="out" expression=
                    "ChangeOps.createOut()" />
        </transition>
        <transition on="search" to="search">
        </transition>
    </view-state>
</flow>