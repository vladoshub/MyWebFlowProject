<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">

    <var name="out"
         class="ru.mmtr.flow.Out"/>

    <view-state id="main" view="main">
        <transition on="nextRus" to="setMessageRus">
            <set  name = "out.voc"  value = "1"/>
        </transition>
        <transition on="nextBin" to="setMessageBin">
        <set  name = "out.voc"  value = "2"/>
        </transition>
    </view-state>

    <action-state id="setMessageRus">
        <evaluate expression="setMessageController"/>
        <transition on="ok" to="temp"/>
    </action-state>

    <action-state id="setMessageBin">
        <evaluate expression="setMessageController"/>
        <transition on="ok" to="temp"/>
    </action-state>

    <view-state id="temp" view="temp" model="ChangeOps">
        <transition on="nextBin" to="setMessageBin"/>
        <transition on="next" to="end"/>
        <transition on="nextAdd" to="add"/>
        <transition on="nextDel" to="delete"/>
        <transition on="nextSearch">
            <evaluate result="out" expression=
                    "ChangeOps.search(requestParameters.inputNameRus,out.voc)" />
            <render fragments="requestFromServer,messageFromServer"/>
        </transition>
        <transition on="nextPrint" to="print"/>
    </view-state>




    <action-state id="delete">
        <evaluate result="out" expression=
                "ChangeOps.Del(requestParameters.inputNameRus,out.voc)" />
        <transition to="temp">
            <render fragments="requestFromServer"/>
            <render fragments="messageFromServer"/>
        </transition>
    </action-state>
    <action-state id="search">
        <evaluate result="out" expression=
                "ChangeOps.search(requestParameters.inputNameRus,out.voc)" />
            <render fragments="requestFromServer"/>
            <render fragments="messageFromServer"/>
    </action-state>
    <action-state id="add">
        <evaluate result="out" expression=
                "ChangeOps.add(requestParameters.inputNameRus,requestParameters.inputNameRus,requestParameters.inputNameRusc,out.voc)" />
        <transition to="temp">
            <render fragments="requestFromServer"/>
            <render fragments="messageFromServer"/>
        </transition>
    </action-state>
    <action-state id="print">
        <evaluate result="out" expression=
                "ChangeOps.print(out.voc)" />
        <transition to="temp">
            <render fragments="requestFromServer"/>
            <render fragments="messageFromServer"/>
        </transition>
    </action-state>



    <end-state id="rusReady">
        <output name="out" />
    </end-state>


    <end-state id="end" view="../jsp/main.jsp"/>
</flow>