<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">


    <view-state id="main">
        <transition on="nextRus" to="setMessageRus"/>
        <transition on="nextBin" to="setMessageBin"/>
    </view-state>

    <action-state id="setMessageRus">
        <evaluate expression="setMessageController"/>
        <transition on="ok" to="rus-lat"/>
    </action-state>

    <action-state id="setMessageBin">
        <evaluate expression="setMessageController"/>
        <transition on="ok" to="bin-dec"/>
    </action-state>

    <view-state id="rus-lat" view="rus-lat.jsp">
        <transition on="nextBin" to="setMessageBin"/>
        <transition on="next" to="end"/>
    </view-state>

    <view-state id="bin-dec" view="bin-dec.jsp">
        <transition on="nextRus" to="setMessageRus"/>
        <transition on="next" to="end"/>
    </view-state>


    <action-state id="delete">
        <evaluate result="user" expression=
                "ChangeOps.Del(requestParameters.inputNameRus)" />
    </action-state>
    <action-state id="search">
        <evaluate result="user" expression=
                "hellojohnFlowActions.createUser(requestParameters.name)" />
    </action-state>
    <action-state id="add">
        <evaluate result="user" expression=
                "hellojohnFlowActions.createUser(requestParameters.name)" />
    </action-state>
    <action-state id="out">
        <evaluate result="user" expression=
                "hellojohnFlowActions.createUser(requestParameters.name)" />
    </action-state>






    <end-state id="end" view="main.jsp"/>
</flow>