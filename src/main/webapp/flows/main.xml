<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">

    <var name="out"
         class="ru.mmtr.flow.Out"/>

    <view-state id="main" view="/WEB-INF/jsp/main.jsp">
        <transition on="nextRus" to="setMessageRus">
            <set  name = "out.rus"  value = "true"/>
        </transition>
        <transition on="nextBin" to="setMessageBin"/>
    </view-state>

    <action-state id="setMessageRus">
        <evaluate expression="setMessageController"/>
        <transition on="ok" to="rus-lat1"/>
    </action-state>

    <action-state id="setMessageBin">
        <evaluate expression="setMessageController"/>
        <transition on="ok" to="bin-dec"/>
    </action-state>

    <view-state id="rus-lat1" view="/WEB-INF/jsp/template.jsp" model="ChangeOps">
        <transition on="nextBin" to="setMessageBin"/>
        <transition on="next" to="end"/>
        <transition on="nextRusAdd" to="add"/>
        <transition on="nextRusDel" to="delete"/>
        <transition on="nextRusSearch" to="search"/>
        <transition on="nextRusPrint" to="print"/>
    </view-state>

    <view-state id="bin-dec" view="/WEB-INF/jsp/bin-dec.jsp">
        <transition on="nextRus" to="setMessageRus"/>
        <transition on="next" to="end"/>
    </view-state>




    <action-state id="delete">
        <evaluate result="out" expression=
                "ChangeOps.Del(requestParameters.inputNameRus)" />
        <transition to="rus-lat1">
            <render fragments="messageFromServer"/>
            <render fragments="requestFromServer"/>
        </transition>
    </action-state>
    <action-state id="search">
        <evaluate result="out" expression=
                "ChangeOps.search(requestParameters.inputNameRus)" />
        <transition to="rus-lat1">
            <render fragments="messageFromServer"/>
            <render fragments="requestFromServer"/>
        </transition>
    </action-state>
    <action-state id="add">
        <evaluate result="out" expression=
                "ChangeOps.add(requestParameters.inputNameRus,requestParameters.inputNameRus,requestParameters.inputNameRus)" />
        <transition to="rus-lat1">
            <render fragments="messageFromServer"/>
            <render fragments="requestFromServer"/>
        </transition>
    </action-state>
    <action-state id="print">
        <evaluate result="out" expression=
                "ChangeOps.print()" />
        <transition to="rus-lat1">
            <render fragments="messageFromServer"/>
            <render fragments="requestFromServer"/>
        </transition>
    </action-state>



    <end-state id="rusReady">
        <output name="out" />
    </end-state>


    <end-state id="end" view="../WEB-INF/jsp/main.jsp"/>
</flow>